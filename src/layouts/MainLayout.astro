---
import Footer from "../components/Footer.astro"
import NavBar from "../components/NavBar.astro"
const { title } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <NavBar/>
		<slot>
            Default if nothing is passed...
        </slot>
        <Footer/>
	</body>
</html>


<!-- Styles -->
<style is:global>

    /* Variables */
    :root
    {
        /* Colors used in the project */
        --background: "#ECE6E1";
        --text: "#4D4D4D";
        --white: "#FFFFFF";
        --main: "#0B73FD";
        --accent: "#F77200";
        --text_dimmed: "rgba(77,77,77,0.5);";

        /* We use the same font throughout the whole project */
        font-family: "SF-Pro", sans-serif; 
    }


    body
    {
        background-color: var(--main);
    }

    /* Text Styles */

    /* Desktop breakpoint */
    @media (width >= 1280px) 
    {
        .large-text
        {
            font-weight: 900; 
            font-size: 7.625rem;
            letter-spacing:-3%;
        }

        .body
        {
            font-weight: 300; /* TODO: Check if this equals to REGULAR font size */
            font-size: 1.5rem;
            letter-spacing:-3%;
        }

        .section-title
        {
            font-weight: 900;
            font-size: 11.125rem;
            letter-spacing:-3%;
            -webkit-text-stroke-width: 1px;
            -webkit-text-fill-color: transparent;
            -webkit-text-stroke-color: var(--text);
        }

        .header-2
        {
            font-weight: 900;
            font-size: 6.5rem;
            letter-spacing:-3%;
        }

        .header-3
        {
            font-weight: 900;
            font-size: 3rem;
        }

        .header-4
        {
            font-weight: 300; /* TODO: Check if this equals to REGULAR font size */
            font-size: 2.5rem;
        }

        .nav-link
        {
            font-weight: 600; /* TODO: Check if this equals to SEMIBOLD font size */
            font-size: 1rem;
            letter-spacing:-3%;
        }

        .text-based-link
        {
            font-weight: 600; /* TODO: Check if this equals to SEMIBOLD font size */
            font-size: 1.25rem;
            letter-spacing:-3%;
        }

        .footer-small-text
        {
            font-weight: 300; /* TODO: Check if this equals to REGULAR font size */
            font-size: 0.875rem;
            letter-spacing:-3%;
        }
    }

    /* Tablet breakpoint */
    @media (768px <= width < 1280px) 
    {
        .large-text
        {
            font-weight: 900; 
            font-size: 5.188rem;
            letter-spacing:-3%;
        }

        .body
        {
            font-weight: 300; /* TODO: Check if this equals to REGULAR font size */
            font-size: 1.25rem;
            letter-spacing:-3%;
        }

        .section-title
        {
            font-weight: 900;
            font-size: 9.5rem;
            letter-spacing:-3%;
            line-height: 117%;
            -webkit-text-stroke-width: 1px;
            -webkit-text-fill-color: transparent;
            -webkit-text-stroke-color: var(--text);
        }

        .header-2
        {
            font-weight: 900;
            font-size: 4.375rem;
            letter-spacing:-3%;
        }

        .header-3
        {
            font-weight: 900;
            font-size: 2.25rem;
        }

        .header-4
        {
            font-weight: 300; /* TODO: Check if this equals to REGULAR font size */
            font-size: 2rem;
        }

        .nav-link
        {
            font-weight: 600; /* TODO: Check if this equals to SEMIBOLD font size */
            font-size: 0.875rem;
            letter-spacing:-3%;
        }

        .text-based-link
        {
            font-weight: 600; /* TODO: Check if this equals to SEMIBOLD font size */
            font-size: 1rem;
            letter-spacing:-3%;
        }

        .footer-small-text
        {
            font-weight: 300; /* TODO: Check if this equals to REGULAR font size */
            font-size: 0.875rem;
            letter-spacing:-3%;
        }
    }

    /* Phone breakpoint */
    @media (width < 768px) {
        .large-text
        {
            font-weight: 900; 
            font-size: 2.5rem;
            letter-spacing:-3%;
        }

        .body
        {
            font-weight: 300; /* TODO: Check if this equals to REGULAR font size */
            font-size: 1rem;
            letter-spacing:-3%;
        }

        .section-title
        {
            font-weight: 900;
            font-size: 5rem;
            letter-spacing:-3%;
            line-height: 117%;
            -webkit-text-stroke-width: 1px;
            -webkit-text-fill-color: transparent;
            -webkit-text-stroke-color: var(--text);
        }

        .header-2
        {
            font-weight: 900;
            font-size: 2.5rem;
            letter-spacing:-3%;
        }

        .header-3
        {
            font-weight: 900;
            font-size: 1.563rem;
        }

        .header-4
        {
            font-weight: 300; /* TODO: Check if this equals to REGULAR font size */
            font-size: 1.5rem;
        }

        .nav-link
        {
            font-weight: 600; /* TODO: Check if this equals to SEMIBOLD font size */
            font-size: 0.813rem;
            letter-spacing:-3%;
        }

        .text-based-link
        {
            font-weight: 600; /* TODO: Check if this equals to SEMIBOLD font size */
            font-size: 0.875rem;
            letter-spacing:-3%;
        }

        .footer-small-text
        {
            font-weight: 300; /* TODO: Check if this equals to REGULAR font size */
            font-size: 0.813rem;
            letter-spacing:-3%;
        }
    }
</style>