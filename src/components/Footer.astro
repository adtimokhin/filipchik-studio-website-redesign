        <FooterLink text="FACEBOOK" dest="https://www.facebook.com/fililipchik?mibextid=LQQJ4d"/>
        <FooterLink text="VK" dest="https://vk.com/mark1236"/>
        <FooterLink text="WHATSAPP" dest="https://api.whatsapp.com/send/?phone=79168027761&text&type=phone_number&app_absent=0"/>
        <FooterLink text="LINKEDIN" dest="https://www.linkedin.com/in/alexander-filipchik-088156241/"/>
    </div>
    <hr class="border-t-1 border-background">

    <!-- FIXME: When going to smaller screen sizes the inner div does not display any top padding -->
    <div class="w-full project-grid-no-padding text-center footer-small-text top-in_element nav-link">
        <div class="flex flex-1 justify-center desktop:col-start-2 order-1">
            <a href="/#no_where" class="h-fit w-fit">УСЛОВИЯ ПОЛЬЗОВАНИЯ САЙТОМ</a>
        </div>
        
        <div class="phone:col-span-2 phone:items-center phone:order-last tablet:order-2 tablet:col-span-1 hover:cursor-default">
            <p>@2023-2024</p>
            <p>FILIPCHIK STUDIOS LLC</p>
        </div>
        <div class="order-3 flex flex-1 justify-center">
            <a href="/#no_where" class="h-fit w-fit">ПОЛИТИКА ОБРАБОТКИ ДАННЫХ</a>
        </div>
    </div>
    <div class="w-full flex flex-col items-center justify-center footer-small-text top-in_element nav-link">
        <a href="https://adtimokhin.me" target="_blank" class="self-center ">WEBSITE BY @ADTIMOKHIN</a>
