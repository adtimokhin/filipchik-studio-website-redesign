        <div class="flex flex-1 justify-center row-start-2 desktop:col-start-4 tablet:col-start-3 phone:col-start-2">
            <a href="/online/talks" class="text-center text-based-link w-fit h-fit">МЫ ОНЛАЙН</a>
        </div>
    </div>

   
    
    <!-- Social Media Links -->
    <h3 class="header-4 top-in_element">Контакты</h3>
    <hr class="border-t-1 border-background">
     <div class="project-grid-no-padding body-header gap-in_element items-center justify-center">
        <FooterLink text="INSTAGRAM" dest="https://www.instagram.com/fililipchik/"/>
        <FooterLink text="TELEGRAM" dest="https://t.me/filipchik_daily_ru"/>
        <FooterLink text="YOUTUBE" dest="https://www.youtube.com/channel/UCSiCnudLqq8rRxHzjAdaszA"/>
        <FooterLink text="TWITTER" dest="https://x.com/i/flow/login?redirect_after_login=%2Ffililipchik"/>
