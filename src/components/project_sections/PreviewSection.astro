---
import { Image } from 'astro:assets';
import previewReference from "../../../public/projects/aviasales/avisales_preview.png"

// summaryPoints must contain 3 strings
// title is a string
// imagePath is a string of a relative path to an image from the public folder
const {title, summaryPoints, imagePath} = Astro.props
---

<section class="w-screen h-screen bg-slate-800 relative -z-10">
    <div class="w-full h-full relative bottom-0 -z-10">
        <Image src={imagePath} alt="Avisales preview" width="1" height="1" class="w-full h-full z-30 absolute bottom-0" loading="eager"/>
        <div class="w-screen h-screen z-50 absolute bottom-0" style={{background: "linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 64%, rgba(0, 0, 0, 1) 100%);"}}/>
    </div>
    <div class="w-full px-10 absolute bottom-0 my-10 h-fit">
        <h1 class="header-2 text-background w-10/12">{title}</h1>
        <hr class="border-t-1 text-background top-body-header">
        <div class="w-full project-grid-no-padding text-background body text-left top-body-header gap-in_element">
            <h2 class="header-4">ОПИСАНИЕ</h2>
            <p class="desktop:col-start-3 tablet:col-start-2 phone:col-start-2">{summaryPoints[0]}</p>
            <p class="desktop:col-start-4 tablet:col-start-3 phone:col-start-2">{summaryPoints[1]}</p>
            <p class="desktop:col-start-5 tablet:col-start-2 phone:col-start-2">{summaryPoints[2]}</p>
        </div>
    </div>
</section>