            links={
                [{
                    text:"ОТКЛИКНУТЬСЯ",
                    link:"mailto:info@filipchikstudios.com?subject=Подача на 'Talent Hunter' - Filipchik Studios",
                    iconPath:"/icons/email-icon.svg",
                    iconAlt:"Email"
                },
                {
                    text:"ОПИСАНИЕ ВАКАНСИИ",
                    link:"https://drive.google.com/file/d/1s6xIe3GV_dh18z9MDM_1JM8zepouzf_A/view",
                    iconPath:"/icons/download-icon.svg",
                    iconAlt:"Download"  
                }
            ]
            }
            />
