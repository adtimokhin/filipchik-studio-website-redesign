                [{
                    text:"ОТКЛИКНУТЬСЯ",
                    link:"mailto:info@filipchikstudios.com?subject=Подача на 'Проектный Менеджер' - Filipchik Studios",
                    iconPath:"/icons/email-icon.svg",
                    iconAlt:"Email"
                },
                {
                    text:"ОПИСАНИЕ ВАКАНСИИ",
                    link:"https://drive.google.com/file/d/1__HsyQWpDqAmU5ebjQggFfY1g618MI13/view",
                    iconPath:"/icons/download-icon.svg",
                    iconAlt:"Download"  
                }
            ]
            }
            />
            <hr class="border-t-1 border-text">
            <ListItem jobTitle="Разработчик на Lua / Roblox" summaryPoints={["ОНЛАЙН","MIDDLE","150-250К"]} summaryFull="Ищем специалиста с портфолио коммерческих проектов в Roblox и опытом управления командой (2-5 человек) на IT проектах. Ключевая компетенция: разработка игр и программирование плейсов" links={
                [{
                    text:"ОТКЛИКНУТЬСЯ",
                    link:"mailto:info@filipchikstudios.com?subject=Подача на 'Разработчик на Lua / Roblox' - Filipchik Studios",
                    iconPath:"/icons/email-icon.svg",
                    iconAlt:"Email"
                },
                {
                    text:"ОПИСАНИЕ ВАКАНСИИ",
                    link:"https://drive.google.com/file/d/1AnEJLCjYHPHURbjtaV0GgE7SdjzxKmbx/view",
